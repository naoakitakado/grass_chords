.wrapper__contents
  .content
    .content__search-result
      = form_with url: search_songs_path, method: :get, local: true do |f|
        .seatch-result__search-window
          =f.text_field :keyword, id: "incremental_text"
          =f.submit "検索"
        .search-result__search-option
          =f.label :jam, id: "incremental_jam" do
            =f.check_box :jam, checkd_value: "true", unchecked_value: "false"
            ジャムセッション向け曲
          =f.label :standard, id: "incremental_standard" do
            =f.check_box :standard, checkd_value: "true", unchecked_value: "false"
            スタンダード曲
          =f.label :beginner, id: "incremental_beginner" do
            =f.check_box :beginner, checkd_value: "true", unchecked_value: "false"
            初心者向け曲
      =link_to "詳細検索", search_page_songs_path
      .search-results__search-result
        - @songs.each do |song|
          -if (song.chords.length > 0)
            - chord = song.chords.order(id: "DESC").first
            =link_to song_path(song) do
              .search-result__song-info
                =song.title
              .search-result__first-chord
                .chord_display
                  -2.times do |i|
                    .chord_display__row{id: "row_#{i}"}
                      -8.times do |j|
                        -# =chord.chordunits[i*4+j].leftbar
                        .chord_display__unit{id: "unit_#{i*8+j}"}
                          .unit--beat.small--beat
                            =chord.chordunits[i*8+j].beat
                          .unit--leftbar.small--leftbar
                            -if chord.chordunits[i*8+j].leftbar != ""
                              =chord.chordunits[i*8+j].leftbar
                            - elsif (i*8+j)%8==0
                              ="'"
                          .unit__note
                            .unit__note--note_name.small--note_name
                            .unit__note--half_note.small--note_half
                            .unit__note--modifier.small--modifier
                          .unit--rightbar.small--rightbar
                            -if chord.chordunits[i*8+j].rightbar != ""
                              =chord.chordunits[i*8+j].rightbar
                            - elsif (i*8+j)%8==(8-1)
                              ="'"
                          .unit--text.hidden{value: "#{chord.chordunits[i*8+j].text}"}
                            =chord.chordunits[i*8+j].text
          -else
            =link_to song_path(song) do
              .search-result__song-info
                =song.title
            コード譜が登録されていません

          
